# =============================================================================
# DATABASE CONFIGURATION (Esterno)
# =============================================================================
# Host del database PostgreSQL esterno
HOST=your-external-db-host.com

# Porta del database
PORT=5432

# Username del database
USER=odoo

# Password del database
PASSWORD=your_secure_db_password_here


# =============================================================================
# ODOO CONFIGURATION (Community Edition)
# =============================================================================
# Master password per gestire i database (IMPORTANTE - CAMBIARE!)
ADMIN_PASSWD=your_master_password_here

# Nome del database (opzionale, se specifico)
# DB_NAME=odoo_production


# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Host Redis per sessioni e cache
REDIS_HOST=redis
REDIS_PORT=6379


# =============================================================================
# MINIO / S3 STORAGE CONFIGURATION
# =============================================================================
# Credenziali MinIO per object storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_minio_password_here

# Endpoint MinIO (opzionale)
# MINIO_ENDPOINT=http://minio:9000


# =============================================================================
# TRAEFIK CONFIGURATION
# =============================================================================
# Elenco degli host per il routing Traefik
# Formato: Host(`domain1.com`) || Host(`domain2.com`) || Host(`domain3.com`)
TRAEFIK_HOSTS=Host(`victorianmonkey.org`) || Host(`www.victorianmonkey.org`)

# Email per certificati Let's Encrypt
ACME_EMAIL=ops@victorianmonkey.org


# =============================================================================
# GRAFANA CONFIGURATION (Opzionale)
# =============================================================================
# Credenziali admin Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin_password_here


# =============================================================================
# OPTIONAL: ODOO ADVANCED SETTINGS
# =============================================================================
# Queste possono essere aggiunte se vuoi sovrascrivere parametri via env
# invece che usare solo odoo.conf

# Workers (0 = threaded, >0 = multiprocess - consigliato per produzione)
# WORKERS=6
# MAX_CRON_THREADS=2
# LIMIT_TIME_CPU=1200
# LIMIT_TIME_REAL=2400

# Logging level (debug, info, warning, error, critical)
# LOG_LEVEL=info

# Database filter per multi-tenancy (usa %d per subdomain)
# DBFILTER=^%d$


# =============================================================================
# SMTP CONFIGURATION (Opzionale)
# =============================================================================
# Configurazione email in uscita
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_SSL=True
