<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_res_config_settings_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='contacts_settings']" position="after">
                <div id="product_settings">
                    <block title="Products" name="product_setting_container">
                        <setting help="Activate to automatically generate product references">
                            <field name="active_product_default_code_automation" string="Product Reference Automation"/>
                        </setting>
                        <setting help="Activate to automatically generate product barcodes">
                            <field name="active_product_barcode_automation" string="Product Barcode Automation"/>
                        </setting>
                    </block>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
