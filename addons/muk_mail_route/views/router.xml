<?xml version='1.0' encoding='UTF-8' ?>
<odoo>

	<record id="view_router_form" model="ir.ui.view">
        <field name="name">muk_mail_route.router.form</field>
        <field name="model">muk_mail_route.router</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="configuration_id" invisible="1"/>
                    <field name="model_id" invisible="1"/>
                    <group invisible="configuration_id and route_type == 'new'">
                        <field 
                            name="reference" 
                            invisible="not model_id"
                            required="route_type == 'search'"
                            options="{'model_field': 'model_id', 'no_create': True}"
                        />
                        <field 
                            name="reference" 
                            invisible="model_id"
                            required="not configuration_id or route_type == 'search'"
                        />
                        <field
                            name="notify" 
                            widget="boolean_toggle"
                        />
                        <field 
                            name="set_is_internal" 
                            widget="boolean_toggle"
                            invisible="not notify"
                        />
                	</group>
                    <p invisible="route_type != 'new'">
                        Do you want to create a new record and attach the messages?
                    </p>
                </sheet>
                <footer>
                    <button 
                    	name="action_route"
                        string="Attach Message"
                        type="object"
                        class="oe_highlight"
                        invisible="configuration_id and route_type == 'new'"
                    />
                    <button 
                    	name="action_route"
                        string="Create Record"
                        type="object"
                        class="oe_highlight"
                        invisible="route_type != 'new'"
                    />
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
