<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_membership_card_tree" model="ir.ui.view">
        <field name="name">membership.card.tree</field>
        <field name="model">membership.card</field>
        <field name="arch" type="xml">
            <tree string="Card" decoration-success="is_active == True" decoration-muted="is_expired == True or is_lost == True or is_stolen == True">
                <field name="card_number"/>
                <field name="member_id"/>
                <field name="membership_type_id"/>
                <field name="issue_date"/>
                <field name="expiry_date"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="is_lost"/>
                <field name="is_stolen"/>
            </tree>
        </field>
    </record>

    <record id="view_membership_card_form" model="ir.ui.view">
        <field name="name">membership.card.form</field>
        <field name="model">membership.card</field>
        <field name="arch" type="xml">
            <form string="Card di Membership">
                <header>
                    <button name="action_replace_card" string="Sostituisci Card" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('is_lost', '=', False), ('is_stolen', '=', False)]}"/>
                    <button name="action_print_card" string="Stampa Card" type="object" 
                            class="oe_highlight" icon="fa-print"/>
                    <field name="is_active" widget="statusbar" statusbar_visible="is_active,is_expired"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Persa" bg_color="text-warning" 
                            attrs="{'invisible': [('is_lost', '=', False)]}"/>
                    <widget name="web_ribbon" title="Rubata" bg_color="text-danger" 
                            attrs="{'invisible': [('is_stolen', '=', False)]}"/>
                    <group>
                        <group string="Informazioni Card">
                            <field name="card_number" readonly="1"/>
                            <field name="barcode" readonly="1"/>
                            <field name="qr_code" readonly="1"/>
                        </group>
                        <group string="Membro e Membership">
                            <field name="member_id" options="{'no_create': True}"/>
                            <field name="membership_type_id" readonly="1"/>
                        </group>
                    </group>
                    <group string="Date">
                        <group>
                            <field name="issue_date"/>
                            <field name="expiry_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="is_lost"/>
                            <field name="is_stolen"/>
                            <field name="is_replaced"/>
                            <field name="replaced_by_id" attrs="{'invisible': [('is_replaced', '=', False)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Note">
                            <field name="notes" placeholder="Note sulla card..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_membership_card_search" model="ir.ui.view">
        <field name="name">membership.card.search</field>
        <field name="model">membership.card</field>
        <field name="arch" type="xml">
            <search string="Cerca Card">
                <field name="card_number"/>
                <field name="barcode"/>
                <field name="member_id"/>
                <field name="membership_type_id"/>
                <filter string="Attive" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Scadute" name="expired" domain="[('is_expired', '=', True)]"/>
                <filter string="Perse" name="lost" domain="[('is_lost', '=', True)]"/>
                <filter string="Rubate" name="stolen" domain="[('is_stolen', '=', True)]"/>
                <group expand="0" string="Raggruppa per">
                    <filter string="Tipo Membership" name="group_type" context="{'group_by': 'membership_type_id'}"/>
                    <filter string="Stato" name="group_status" context="{'group_by': 'is_active'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_membership_card_view" model="ir.actions.act_window">
        <field name="name">Card di Membership</field>
        <field name="res_model">membership.card</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Nessuna card trovata!
            </p>
            <p>
                Le card vengono generate automaticamente quando crei un nuovo membro.
            </p>
        </field>
    </record>
</odoo>

