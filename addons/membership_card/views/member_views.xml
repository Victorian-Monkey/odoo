<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_member_tree" model="ir.ui.view">
        <field name="name">membership.member.tree</field>
        <field name="model">membership.member</field>
        <field name="arch" type="xml">
            <tree string="Membri" decoration-success="is_active == True" decoration-danger="is_expired == True">
                <field name="display_name" string="Nome"/>
                <field name="name" invisible="1"/>
                <field name="fiscal_code"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="membership_type_id"/>
                <field name="role_in_association"/>
                <field name="card_number"/>
                <field name="registration_date"/>
                <field name="membership_start_date"/>
                <field name="membership_end_date"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="residence_city"/>
                <field name="residence_state_id"/>
            </tree>
        </field>
    </record>

    <record id="view_member_form" model="ir.ui.view">
        <field name="name">membership.member.form</field>
        <field name="model">membership.member</field>
        <field name="arch" type="xml">
            <form string="Membro">
                <header>
                    <button name="action_generate_card" string="Genera Card" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('active_card_id', '!=', False)]}"/>
                    <button name="action_renew_membership" string="Rinnova Membership" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('is_active', '=', True)]}"/>
                    <field name="is_active" widget="statusbar" statusbar_visible="is_active,is_expired"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_report_membership_card)d" type="action" class="oe_stat_button" 
                                icon="fa-credit-card" context="{'active_id': active_card_id.id}" 
                                attrs="{'invisible': [('active_card_id', '=', False)]}">
                            <field name="active_card_id" widget="statinfo" string="Card Attiva"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Scaduto" bg_color="text-danger" 
                            attrs="{'invisible': [('is_expired', '=', False)]}"/>
                    <group>
                        <group string="Informazioni Personali">
                            <field name="display_name" readonly="1" string="Nome Visualizzato"/>
                            <field name="name" placeholder="Nome Completo" attrs="{'invisible': [('use_chosen_name', '=', True)]}"/>
                            <separator string="Nome Legale" attrs="{'invisible': [('use_chosen_name', '=', True)]}"/>
                            <div class="row" attrs="{'invisible': [('use_chosen_name', '=', True)]}">
                                <div class="col-6">
                                    <field name="first_name" placeholder="Nome Legale"/>
                                </div>
                                <div class="col-6">
                                    <field name="last_name" placeholder="Cognome Legale"/>
                                </div>
                            </div>
                            <separator string="Nome di Elezione (Chosen Name)" attrs="{'invisible': [('use_chosen_name', '=', False)]}"/>
                            <field name="use_chosen_name"/>
                            <div class="row" attrs="{'invisible': [('use_chosen_name', '=', False)]}">
                                <div class="col-6">
                                    <field name="chosen_first_name" placeholder="Nome di Elezione" 
                                           attrs="{'required': [('use_chosen_name', '=', True)]}"/>
                                </div>
                                <div class="col-6">
                                    <field name="chosen_last_name" placeholder="Cognome di Elezione (opzionale)"/>
                                </div>
                            </div>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                        </group>
                        <group string="Dati Anagrafici">
                            <field name="birth_date"/>
                            <field name="birth_place" placeholder="Città"/>
                            <field name="birth_state_id" placeholder="Provincia"/>
                            <field name="birth_country_id"/>
                            <field name="gender"/>
                            <field name="nationality"/>
                            <field name="age" readonly="1"/>
                        </group>
                    </group>
                    <group string="Residenza">
                        <group>
                            <field name="residence_street" placeholder="Via"/>
                            <field name="residence_street2" placeholder="Numero civico, interno, etc."/>
                            <field name="residence_city" placeholder="Città"/>
                            <field name="residence_state_id" placeholder="Provincia"/>
                            <field name="residence_zip" placeholder="CAP"/>
                            <field name="residence_country_id"/>
                        </group>
                    </group>
                    <group string="Domicilio">
                        <group>
                            <field name="domicile_different"/>
                            <field name="domicile_street" attrs="{'invisible': [('domicile_different', '=', False)], 'required': [('domicile_different', '=', True)]}"/>
                            <field name="domicile_street2" attrs="{'invisible': [('domicile_different', '=', False)]}"/>
                            <field name="domicile_city" attrs="{'invisible': [('domicile_different', '=', False)], 'required': [('domicile_different', '=', True)]}"/>
                            <field name="domicile_state_id" attrs="{'invisible': [('domicile_different', '=', False)]}"/>
                            <field name="domicile_zip" attrs="{'invisible': [('domicile_different', '=', False)]}"/>
                            <field name="domicile_country_id" attrs="{'invisible': [('domicile_different', '=', False)]}"/>
                        </group>
                    </group>
                    <group string="Dati Fiscali (Italia)">
                        <group>
                            <field name="is_company"/>
                            <field name="company_name" attrs="{'invisible': [('is_company', '=', False)], 'required': [('is_company', '=', True)]}"/>
                            <field name="fiscal_code" required="1"/>
                            <field name="vat" attrs="{'required': [('is_company', '=', True)]}"/>
                        </group>
                    </group>
                    <group string="Dati Professionali">
                        <group>
                            <field name="profession" placeholder="Es: Ingegnere, Avvocato, etc."/>
                        </group>
                    </group>
                    <group string="Associazione No Profit">
                        <group>
                            <field name="registration_date"/>
                            <field name="role_in_association"/>
                            <field name="role_other" attrs="{'invisible': [('role_in_association', '!=', 'other')], 'required': [('role_in_association', '==', 'other')]}"/>
                        </group>
                    </group>
                    <group string="Consensi GDPR e Privacy (Obbligatori)">
                        <group>
                            <field name="privacy_consent" required="1"/>
                            <field name="privacy_consent_date" readonly="1"/>
                            <field name="data_processing_consent" required="1"/>
                            <field name="data_processing_consent_date" readonly="1"/>
                            <field name="marketing_consent"/>
                            <field name="marketing_consent_date" readonly="1"/>
                        </group>
                    </group>
                    <group string="Membership">
                        <group>
                            <field name="membership_type_id" options="{'no_create': True}"/>
                            <field name="membership_start_date"/>
                            <field name="membership_end_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="total_renewals" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Membership">
                            <group>
                                <group>
                                    <field name="membership_type_id" options="{'no_create': True}"/>
                                    <field name="membership_start_date"/>
                                    <field name="membership_end_date" readonly="1"/>
                                </group>
                                <group>
                                    <field name="total_renewals" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Card">
                            <field name="card_ids" nolabel="1">
                                <tree>
                                    <field name="card_number"/>
                                    <field name="barcode"/>
                                    <field name="issue_date"/>
                                    <field name="expiry_date"/>
                                    <field name="is_active" widget="boolean_toggle"/>
                                    <field name="is_lost"/>
                                    <field name="is_stolen"/>
                                    <button name="%(action_report_membership_card)d" string="Stampa" type="action" 
                                            context="{'active_id': id}" icon="fa-print"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Note">
                            <field name="notes" placeholder="Note aggiuntive sul membro..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_member_search" model="ir.ui.view">
        <field name="name">membership.member.search</field>
        <field name="model">membership.member</field>
        <field name="arch" type="xml">
            <search string="Cerca Membro">
                <field name="name"/>
                <field name="email"/>
                <field name="fiscal_code"/>
                <field name="card_number"/>
                <field name="membership_type_id"/>
                <filter string="Attivi" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Scaduti" name="expired" domain="[('is_expired', '=', True)]"/>
                <filter string="Senza Card" name="no_card" domain="[('active_card_id', '=', False)]"/>
                <separator/>
                <filter string="Scadono Presto" name="expiring_soon" 
                        domain="[('membership_end_date', '&lt;=', (context_today() + relativedelta(months=+1)).strftime('%Y-%m-%d')), ('is_active', '=', True)]"/>
                <filter string="Senza Consenso Privacy" name="no_privacy_consent" domain="[('privacy_consent', '=', False)]"/>
                <filter string="Senza Consenso Trattamento Dati" name="no_data_consent" domain="[('data_processing_consent', '=', False)]"/>
                <separator/>
                <filter string="Socio Fondatore" name="founder" domain="[('role_in_association', '=', 'founder')]"/>
                <filter string="Consiglio Direttivo" name="board" domain="[('role_in_association', '=', 'board')]"/>
                <group expand="0" string="Raggruppa per">
                    <filter string="Tipo Membership" name="group_type" context="{'group_by': 'membership_type_id'}"/>
                    <filter string="Ruolo" name="group_role" context="{'group_by': 'role_in_association'}"/>
                    <filter string="Stato" name="group_status" context="{'group_by': 'is_active'}"/>
                    <filter string="Città Residenza" name="group_city" context="{'group_by': 'residence_city'}"/>
                    <filter string="Provincia" name="group_state" context="{'group_by': 'residence_state_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_member_view" model="ir.actions.act_window">
        <field name="name">Membri</field>
        <field name="res_model">membership.member</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aggiungi il tuo primo membro!
            </p>
            <p>
                I membri rappresentano le persone o aziende iscritte alla tua associazione.
            </p>
        </field>
    </record>

    <record id="view_member_kanban" model="ir.ui.view">
        <field name="name">membership.member.kanban</field>
        <field name="model">membership.member</field>
        <field name="arch" type="xml">
            <kanban default_group_by="membership_type_id" class="o_kanban_small_column">
                <field name="name"/>
                <field name="membership_type_id"/>
                <field name="is_active"/>
                <field name="card_number"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="membership_type_id"/>
                                    <div t-if="record.card_number.raw_value">
                                        <i class="fa fa-credit-card"/> <field name="card_number"/>
                                    </div>
                                    <div t-if="record.is_active.raw_value" class="badge badge-success">
                                        Attivo
                                    </div>
                                    <div t-if="!record.is_active.raw_value" class="badge badge-danger">
                                        Scaduto
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>

